             if (this.tickTimer >= 10) {
                 float f = Math.min(this.saturationLevel, 6.0F);
 
-                player.heal(f / 6.0F, org.bukkit.event.entity.EntityRegainHealthEvent.RegainReason.SATIATED); // CraftBukkit - added RegainReason
