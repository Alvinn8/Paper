     }
 
     @Override
@@ -587,6 +588,7 @@ public class LevelChunk implements ChunkAccess {
             return;
         }
         entityCounts.decrement(entity.getMinecraftKeyString());
+        this.markUnsaved(); // Paper
         // Paper end
         this.entities.remove(entity); // Paper
     }
