Subject: [PATCH] Prevent sync chunk loads when villagers try to find beds


diff --git a/src/main/java/net/minecraft/world/entity/ai/behavior/SleepInBed.java b/src/main/java/net/minecraft/world/entity/ai/behavior/SleepInBed.java
index 02240560a451605932a1236aa99ae594ae6e0420..b8cd7c1c9acfd79fca46bfc59e5d6a29056d9ca4 100644
--- a/src/main/java/net/minecraft/world/entity/ai/behavior/SleepInBed.java
+++ b/src/main/java/net/minecraft/world/entity/ai/behavior/SleepInBed.java
@@ -40,7 +40,8 @@ public class SleepInBed extends Behavior<LivingEntity> {
                     }
                 }
 
-                BlockState blockState = serverLevel.getBlockState(globalPos.pos());
+                BlockState blockState = serverLevel.getTypeIfLoaded(globalPos.pos()); // Paper
+                if (blockState == null) { return false; } // Paper
                 return globalPos.pos().closerThan(livingEntity.position(), 2.0D) && blockState.getBlock().is(BlockTags.BEDS) && !blockState.getValue(BedBlock.OCCUPIED);
             }
         }
